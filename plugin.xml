<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    id="com.phonegap.plugins.twitterconnect"
    version="0.3.2">

    <name>Twitter Connect</name>
    <description>This is my verison the plugin for Twitter in Apache Cordova/PhoneGap!</description>
    <license>MIT</license>
    
    <js-module src="www/SocialAuthenticationPlugin.js" name="SocialAuthenticationPlugin">
        <clobbers target="SocialAuthenticationPlugin" />
    </js-module>
    <js-module src="www/TwitterPlugin.js" name="TwitterPlugin">
        <clobbers target="Twitter" />
    </js-module>

    <!-- ios -->
    <platform name="ios">

       <config-file target="config.xml" parent="/widget/plugins">
        <feature name="SocialAuthenticationPlugin">
            <param name="ios-package" value="Authentication" />
        </feature>
    </config-file>

    <config-file target="config.xml" parent="/widget/plugins">
        <feature name="TwitterPlugin">
            <param name="ios-package" value="TwitterPlugin" />
        </feature>
    </config-file>

    <header-file src="src/ios/TwitterPlugin.h" />
    <source-file src="src/ios/TwitterPlugin.m" />
    <header-file src="SocialAuthenticationPlugin.h" />
    <header-file src="SocialAuthenticationPlugin.m" />

    <framework src="Social.framework" weak="true" />
    <framework src="Accounts.framework" weak="true" />

</platform>
</plugin>
